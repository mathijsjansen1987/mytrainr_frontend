<h1>Videos</h1>

{{#link-to 'videos.add' class="btn"}}{{fa-icon 'upload'}}Video toevoegen{{/link-to}}
<ul>
  {{#each model as |video|}}
    <li class="video-item">
		{{#link-to 'videos.show' video}}
		<img src="{{video.imageUrl}}" width="285" height="175"/>
		<section class="info">
			<h3>{{video.title}}</h3>
			<hr>
			<p>{{video.description}}</p>
			<hr>
			<button class="btn">Bekijk</button>
			<button class="btn" {{action 'removeVideo' video}}>{{fa-icon 'trash'}}</button>
		</section>
		{{/link-to}}
	</li>
  {{/each}}
</ul>
