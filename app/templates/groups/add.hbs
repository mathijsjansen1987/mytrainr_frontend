<h1>Groep toevoegen</h1>

<p>
	{{input type="text" value=title placeholder="titel" size="50"}}
</p>

<p>
	{{textarea value=description placeholder="beschrijving" cols="80" rows="6" }}
</p>

<p>
	{{view "select"
       content=sports
       optionValuePath="content.id"
       optionLabelPath="content.name"
	   selectionBinding=selectedSport
	  }}
	
</p>

{{#link-to 'groups' class="btn"}}Annuleren{{/link-to}}
<button class="btn" {{action 'addGroup'}}>Toevoegen</button>
