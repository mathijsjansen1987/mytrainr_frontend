<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mytrainr.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Capture">
        <param name="android-package" value="org.apache.cordova.mediacapture.Capture" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <feature name="PKVideoThumbnail">
        <param name="android-package" value="com.photokandy.PKVideoThumbnail.PKVideoThumbnail" />
    </feature>
    <feature name="VideoThumbnail">
        <param name="android-package" value="com.lewie9021.videothumbnail.VideoThumbnail" />
    </feature>
    <allow-intent href="market:*" />
    <icon src="../dist/assets/images/icon.png" />
    <name>Mytrainr</name>
    <description>
        Het video-platform voor de schaatssport
	</description>
    <access origin="https://codepush.azurewebsites.net/" />
    <author email="mathijs@code.rehab" href="http://code.rehab">
		Code rehab Team
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
